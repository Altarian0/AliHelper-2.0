<Page x:Class="AliHelper_2._0.Pages.PostSettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AliHelper_2._0.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="387" d:DesignWidth="504"
      Title="PostSettingPage">

    <Grid>
        <ListBox x:Name="ViewSettingListBox" Margin="0,0,0,0.2" Background="{x:Null}" BorderBrush="{x:Null}">
            <ListBoxItem Margin="0,3,0,0" BorderThickness="2" Height="49" Width="491" BorderBrush="#FF464F5A">
                <Grid>
                    <Label Content="Генерировать пост:" FontSize="15" Margin="0,0,320,0" VerticalContentAlignment="Center" Foreground="White" FontWeight="Bold"/>
                    <RadioButton x:Name="YesGenPostRadio" VerticalContentAlignment="Center" Margin="251,0,190,0"  Content="Да" Foreground="White" FontSize="15" Checked="YesGenPostRadio_Checked"/>
                    <RadioButton x:Name="NoGenPostRadio" VerticalContentAlignment="Center" Margin="346,1,85,0"  Content="Нет" Foreground="White" FontSize="15" Checked="NoGenPostRadio_Checked"/>
                </Grid>
            </ListBoxItem>
        </ListBox>

    </Grid>
</Page>
